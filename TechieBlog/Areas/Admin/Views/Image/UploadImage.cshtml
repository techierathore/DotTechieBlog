<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Upload Image</h4>
        </div>
        <div class="modal-body">
            <input type="file" class="form-control" id="UploadBlogImg" />
            <br />
            <img id="imgPreview" height="200" width="200" class="thumbnail" />
        </div>
        <div class="modal-footer">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn" type="button" data-clipboard-target="#txtImg">
                        <i class="fa fa-clipboard" aria-hidden="true"></i>
                    </button>
                </span>
                <input type="text" placeholder="Copy Image link" class="form-control" aria-label="..." id="FeaturedImage" name="FeaturedImage" />
            </div>
        </div>
    </div>
</div>

<script>
    $("#UploadImg").change(function () {    
        UploadBlogImage();
    });
    function UploadBlogImage() {
        var url = '@Url.Action("UploadBlogImageFile", "Image")';
        formData = new FormData();     
        var files = $("#UploadImg").get(0).files;
        if (files.length > 0) {
            formData.append("aUploadedFile", files[0]);
                    }
        $.ajax({
            type: 'POST',
            url: url,
            data: formData,
            cache: false,
            contentType: false,
            processData: false,
            success: function (FileUrl) {
                $("#FeaturedImage").val(FileUrl);
                $("#imgPreview").attr('src', FileUrl);
            },
            error: function (data) {
                alert(data.responseText);
            }
        });
    }
</script>
