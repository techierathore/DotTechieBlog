@using TechieBlog.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin- @ViewBag.Title </title>
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="~/Content/Admin/css/jquery-ui.css">
    <!-- jQuery Gritter -->
    <link rel="stylesheet" href="~/Content/Admin/css/jquery.gritter.css">
    <!-- Font awesome CSS -->
    <link href="~/Content/Admin/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
    <!-- Widgets stylesheet -->
    <link href="~/Content/Admin/css/widgets.css" rel="stylesheet">
</head>
<body>

    @{ BlogUser vCurrUser = null;
        if (null != HttpContext.Current.Session[Constants.LoggedUser])
        {
            vCurrUser = (BlogUser)HttpContext.Current.Session[Constants.LoggedUser];

            if (vCurrUser.Role == Constants.Admin)
            {
                Html.Hidden("PageForAdmin", "True");
            }
            else { Html.Hidden("PageForAdmin", "False"); }
        }
    }

    @if (vCurrUser != null)
    {
        <div class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
            <div class="container">
                <!-- Menu button for smallar screens -->
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Index", "Dashboard", new { Area = "Admin" })" class="navbar-brand">TechieBlog <span class="bold">Admin</span></a>
                </div>
                <!-- Site name for smallar screens -->
                <!-- Navigation starts -->
                <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                    <!-- Links -->
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("LogOut", "Auth")" class="navbar-brand">
                                <i class="fa fa-user"></i>
                                @vCurrUser.FirstName <br /> <b class="caret"></b>
                                <i class="fa fa-power-off"></i> Logout
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Main content starts -->
<div class="content">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-dropdown"><a href="#">Navigation</a></div>
        <div class="sidebar-inner">
            <!-- Search form -->
            <div class="sidebar-widget">
                <form>
                    <input type="text" class="form-control" placeholder="Search">
                </form>
            </div>
            <!--- Sidebar navigation -->
            <!-- If the main navigation has sub navigation, then add the class "has_submenu" to "li" of main navigation. -->
            <ul class="navi">
                <!-- Use the class nred, ngreen, nblue, nlightblue, nviolet or norange to add background color. You need to use this in <li> tag. -->

                <li class="nred current"><a href="index.html"><i class="fa fa-desktop"></i> Dashboard</a></li>
                <!-- Menu with sub menu -->
                <li class="has_submenu nlightblue">
                    <a href="#">
                        <!-- Menu name with icon -->
                        <i class="fa fa-th"></i> Widgets
                        <!-- Icon for dropdown -->
                        <span class="pull-right"><i class="fa fa-angle-right"></i></span>
                    </a>
                    <ul>
                        <li><a href="widgets1.html">Widgets #1</a></li>
                        <li><a href="widgets2.html">Widgets #2</a></li>
                    </ul>
                </li>
                <li class="ngreen"><a href="charts.html"><i class="fa fa-bar-chart-o"></i> Charts</a></li>
                <li class="norange"><a href="ui.html"><i class="fa fa-sitemap"></i> UI Elements</a></li>
                <li class="has_submenu nviolet">
                    <a href="#">
                        <i class="fa fa-file-o"></i> Pages #1
                        <span class="pull-right"><i class="fa fa-angle-right"></i></span>
                    </a>
                    <ul>
                        <li><a href="calendar.html">Calendar</a></li>
                        <li><a href="post.html">Make Post</a></li>
                        <li><a href="login.html">Login</a></li>
                        <li><a href="register.html">Register</a></li>
                        <li><a href="statement.html">Statement</a></li>
                        <li><a href="error-log.html">Error Log</a></li>
                        <li><a href="support.html">Support</a></li>
                    </ul>
                </li>
                <li class="has_submenu nblue">
                    <a href="#">
                        <i class="fa fa-file-o"></i> Pages #2
                        <span class="pull-right"><i class="fa fa-angle-right"></i></span>
                    </a>
                    <ul>
                        <li><a href="error.html">Error</a></li>
                        <li><a href="gallery.html">Gallery</a></li>
                        <li><a href="grid.html">Grid</a></li>
                        <li><a href="invoice.html">Invoice</a></li>
                        <li><a href="media.html">Media</a></li>
                        <li><a href="profile.html">Profile</a></li>
                    </ul>
                </li>
                <li class="nred"><a href="forms.html"><i class="fa fa-list"></i> Forms</a></li>
                <li class="nlightblue"><a href="tables.html"><i class="fa fa-table"></i> Tables</a></li>
            </ul>
            <!--/ Sidebar navigation -->
            <!-- Date -->
            <div class="sidebar-widget">
                <div id="todaydate"></div>
            </div>
        </div>
    </div>
    <!-- Sidebar ends -->
    @RenderBody()
</div>
        <!--/ Content ends -->
    }
    else
    { @RenderBody()}

    <!-- Javascript files -->
    <!-- jQuery -->
    <script src="~/Content/Admin/js/jquery.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    <!-- jQuery UI -->
    <script src="~/Content/Admin/js/jquery-ui.min.js"></script>
    <!-- jQuery Flot -->
    <script src="~/Content/Admin/js/excanvas.min.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.resize.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.pie.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.stack.js"></script>
    <!-- Sparklines -->
    <script src="~/Content/Admin/js/sparklines.js"></script>
    <!-- jQuery Gritter -->
    <script src="~/Content/Admin/js/jquery.gritter.min.js"></script>
    <!-- Respond JS for IE8 -->
    <script src="~/Content/Admin/js/respond.min.js"></script>
    <!-- HTML5 Support for IE -->
    <script src="~/Content/Admin/js/html5shiv.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/Admin/js/custom.js"></script>

    <!-- Script for this page -->
    <script src="~/Content/Admin/js/sparkline-index.js"></script>
</body>
</html>