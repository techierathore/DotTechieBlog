@using BlogEngine.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin- @ViewBag.Title </title>
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <!-- jQuery UI -->
    <link rel="stylesheet" href="~/Content/Admin/css/jquery-ui.css">
    <!-- jQuery Gritter -->
    <link rel="stylesheet" href="~/Content/Admin/css/jquery.gritter.css">
    <!-- Font awesome CSS -->
    <link href="~/Content/Admin/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="~/Content/Admin/css/style.css" rel="stylesheet">
    <!-- Widgets stylesheet -->
    <link href="~/Content/Admin/css/widgets.css" rel="stylesheet">
    <!-- Javascript files -->
    <!-- Mordenizer -->
    <script src="~/Content/modernizr/modernizr-custom.js"></script>
    <!-- jQuery -->
    <script src="~/Content/Admin/js/jquery.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    @RenderSection("PageStyles", required: false)
</head>
<body>

    @{ BlogUser vCurrUser = null;
        if (null != HttpContext.Current.Session[Constants.LoggedUser])
        {
            vCurrUser = (BlogUser)HttpContext.Current.Session[Constants.LoggedUser];

            if (vCurrUser.Role == Constants.Admin)
            {
                Html.Hidden("PageForAdmin", "True");
            }
            else { Html.Hidden("PageForAdmin", "False"); }
        }
    }

    @if (vCurrUser != null)
    {
        <div class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner">
            <div class="container">
                <!-- Menu button for smallar screens -->
                <div class="navbar-header">
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="@Url.Action("Home", "Dashboard", new { Area = "Admin" })" class="navbar-brand">TechieBlog <span class="bold">Admin</span></a>
                </div>
                <!-- Site name for smallar screens -->
                <!-- Navigation starts -->
                <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">&nbsp;</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <i class="fa fa-user"></i> @vCurrUser.FirstName <br /> <b class="caret"></b>
                            </a>
                            <!-- Dropdown menu -->
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("LogOut", "Auth")"><i class="fa fa-power-off"></i> Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!-- Links -->
                    <ul class="nav navbar-nav navbar-right">
                        <!-- New Post-->
                        <li class="dropdown dropdown-big">
                            <a class="dropdown-toggle" href="@Url.Action("NewPost", "ManagePosts", new { Area = "Admin" })">
                                <i class="fa fa-pencil-square"></i> Write New Post
                            </a>
                        </li>
                        <!-- Comment button with number of latest comments count -->
                        <li>
                            <a class="dropdown-toggle" href="#">
                                <i class="fa fa-comments"></i> Comments <span class="badge badge-info">6</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- Main content starts -->
        <div class="content">
            <!-- Sidebar -->
            <div class="sidebar">
                <div class="sidebar-dropdown"><a href="#">Navigation</a></div>
                <div class="sidebar-inner">
                    <!--- Sidebar navigation -->
                    <!-- If the main navigation has sub navigation, then add the class "has_submenu" to "li" of main navigation. -->
                    <ul class="navi">
                        <!-- Use the class nred, ngreen, nblue, nlightblue, nviolet or norange to add background color. You need to use this in <li> tag. -->
                        <li class="nred">&nbsp;</li>
                        <li class="nred"><a href="@Url.Action("Home", "Dashboard")"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                        <li class="ngreen"><a href="@Url.Action("ShowAllPosts", "ManagePosts")"><i class="fa fa-comment"></i> Posts</a></li>
                        <li class="ngreen"><a href="charts.html"><i class="fa fa-list"></i> Tags</a></li>
                        <li class="has_submenu nlightblue">
                            <a href="#">
                                <!-- Menu name with icon -->
                                <i class="fa fa-comments"></i> Comments
                                <!-- Icon for dropdown -->
                                <span class="pull-right"><i class="fa fa-angle-right"></i></span>
                            </a>
                            <ul>
                                <li><a href="widgets1.html">Need Approval</a></li>
                                <li><a href="widgets2.html">Comments</a></li>
                            </ul>
                        </li>
                        <li class="ngreen"><a href="charts.html"><i class="fa fa-users"></i> Users</a></li>
                        <li class="norange"><a href="ui.html"><i class="fa fa-image"></i> Images</a></li>
                        <li class="nred"><a href="forms.html"><i class="fa fa-th"></i> Widgets</a></li>
                        <li class="nlightblue"><a href="tables.html"><i class="fa fa-bar-chart-o"></i> Reports</a></li>
                        <li class="has_submenu nviolet">
                            <a href="#">
                                <i class="fa fa-fw fa-cogs"></i> Settings
                                <span class="pull-right"><i class="fa fa-angle-right"></i></span>
                            </a>
                            <ul>
                                <li><a href="calendar.html">Website Setting</a></li>
                                <li><a href="post.html">Advanced Settings</a></li>
                            </ul>
                        </li>
                    </ul>
                    <!--/ Sidebar navigation -->
                    <!-- Date -->
                    <div class="sidebar-widget">
                        <div id="todaydate"></div>
                    </div>
                </div>
            </div>
            <!-- Sidebar ends -->

            @RenderBody()
        </div>
        <!--/ Content ends -->
    }
    else
    { @RenderBody()}


    <!-- Javascript files -->
    <!-- jQuery UI -->
    <script src="~/Content/Admin/js/jquery-ui.min.js"></script>
    <!-- jQuery Flot -->
    <script src="~/Content/Admin/js/excanvas.min.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.resize.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.pie.js"></script>
    <script src="~/Content/Admin/js/jquery.flot.stack.js"></script>
    <!-- jQuery Gritter -->
    <script src="~/Content/Admin/js/jquery.gritter.min.js"></script>
    <!-- Respond JS for IE8 -->
    <script src="~/Content/Admin/js/respond.min.js"></script>
    <!-- HTML5 Support for IE -->
    <script src="~/Content/Admin/js/html5shiv.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/Admin/js/custom.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>