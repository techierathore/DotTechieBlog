@using BlogEngine.Models
@model Tag
@{
    ViewBag.Title = "Tag";
}

<!-- Main bar -->
<div class="mainbar">
    <!-- Matter -->
    <div class="matter">
        <div class="container">
            <div class="row">&nbsp;</div>
            <div class="col-lg-12">
                <div class="widget wblue">
                    <div class="widget-head">
                        <div class="pull-left">Manage Tag</div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="widget-content">
                        <div class="padd">
                            @using (Html.BeginForm("NewTag", "TagsNUsers", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.TagID, new { htmlAttributes = new { @class = "form-control" } })
                                <!-- Form starts.  -->
                                <div class="form-horizontal">                                    
                                    <div class="form-group">
                                        <label class="col-md-2 control-label" for="TagName">Tag Name </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.TagName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Blog Title" } })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <button class="btn btn-info"><i class="fa fa-save"></i> Save Tag</button>                                            
                                            <a class="btn btn-danger" href="@Url.Action("ShowAllTags", "TagsNUsers", new { Area = "Admin" })">Close</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!--/ Matter ends -->
</div> <!--/ Mainbar ends -->
