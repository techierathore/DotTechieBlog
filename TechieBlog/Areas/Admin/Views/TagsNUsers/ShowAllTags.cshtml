@using BlogEngine.Models
@model IEnumerable<Tag>
@{
    ViewBag.Title = "Show All Tags";
}
<div class="mainbar">
    <!-- Matter -->
    <div class="matter">
        <div class="container">
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">
                    <div class="widget wviolet">
                        <div class="widget-head">
                            <div class="pull-left">Posts</div>
                            <div class="widget-icons pull-right">
                                <a class="btn btn-success" href="@Url.Action("NewPost", "ManagePosts", new { Area = "Admin" })">
                                    <i class="fa fa-pencil-square"></i> Write New Post
                                </a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="widget-content">
                            <div class="table-responsive">
                                    <table class="table table-bordered ">
                                        <thead>
                                            <tr>
                                                <th>Tag ID</th>
                                                <th>Name</th>
                                                <th>Edit/Delete</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var vItem in Model)
                                            {
                                                <tr>
                                                    <td>@vItem.TagID</td>
                                                    <td>@vItem.TagName</td>
                                                    <td>
                                                        <a class="btn btn-sm btn-warning" href="@Url.Action("EditTag", "TagsNUsers", new { aTagID = vItem.TagID })">
                                                            <i class="fa fa-pencil"></i>
                                                        </a>
                                                        <button class="btn btn-sm btn-danger"><i class="fa fa-times"></i> </button>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                            </div>
                        </div>
                        <div class="widget-foot">
                            <ul class="pagination pull-right">
                                <li><a href="#">Prev</a></li>
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">Next</a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--/ Matter ends -->
</div><!--/ Mainbar ends -->
<div class="clearfix"></div>


