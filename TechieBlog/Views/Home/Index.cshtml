@using BlogEngine.ViewModels
@model BlogList
@{
    ViewBag.Title = "Home Page";
}
<section id="hero" class="light-typo">
    <div id="cover-image" class="image-bg animated fadeIn"></div>
    <div class="container welcome-content">
        <div class="middle-text">
            <h1>TechieRathore</h1>
            <h2><b>Key Lime</b> is a blog theme built with Bootstrap <br>by <b>Angelo Studio</b></h2>
            <a class="btn smooth-scroll" href="#start">Get Stated</a>
        </div>
    </div>
</section>
<div id="start" class="container content">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            @foreach (var vItem in Model.BlogPosts)
            {
                <article class="clearfix">
                    <div class="post-date">
                        <a href="">@vItem.CreatedOn.ToLongDateString() </a> <span><a href="">11 Comments</a></span>
                    </div>
                    <h2><a href="post-typography.html">@vItem.Title</a></h2>
                    <p>
                        @vItem.Abstract <a class="" href="@Url.Action("DetailBlog", "Home", new { aPostID = vItem.PostID })">Read more</a>
                    </p>
                </article>
            }
            @if (Model.Pager.EndPage > 1)
            {

                <ul class="pagination">
                    @if (Model.Pager.CurrentPage > 1)
                    {
                        <li>
                            <a href="~/Home/Index">First</a>
                        </li>
                        <li>
                            <a href="~/Home/Index?page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                        </li>
                    }

                    @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                    {
                        <li>
                            <a href="~/Home/Index?page=@(Model.Pager.CurrentPage + 1)">Next</a>
                        </li>
                        <li>
                            <a href="~/Home/Index?page=@(Model.Pager.TotalPages)">Last</a>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
    <!-- end row -->
</div>

