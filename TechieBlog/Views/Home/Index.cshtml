@using BlogEngine.Models
@model IEnumerable<Post>
@{
    ViewBag.Title = "Home Page";
}
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        @foreach (var vItem in Model)
        {
            <article class="clearfix">
                <div class="post-date">
                    <a href="">@vItem.CreatedOn.ToLongDateString() </a> <span><a href="">11 Comments</a></span>
                </div>
                <h2><a href="post-typography.html">@vItem.Title</a></h2>
                <p>
                    @vItem.Abstract <a class="" href="post-typography.html">Read more</a>
                </p>
            </article>
        }
        <div class="paging clearfix">
            <a class="btn pull-left" href="#"><i class="icon-arrow-left2 left"></i><span>Older</span><span class="hidden-xs"> Posts</span></a>
            <a class="btn pull-right" href="#"><span>Newer</span><span class="hidden-xs"> Posts</span><i class="icon-arrow-right2 right"></i></a>
        </div>

    </div>
</div><!-- end row -->
